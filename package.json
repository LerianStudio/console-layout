{
  "name": "@lerian/console-layout",
  "version": "0.1.0",
  "description": "Reusable layout components for Midaz console and plugins",
  "keywords": [
    "react",
    "nextjs",
    "layout",
    "components",
    "midaz"
  ],
  "author": "Midaz Team",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && npm run build:paths && npm run copy:assets",
    "dev": "ts-node --esm src/index.ts",
    "build:paths": "tscpaths -p tsconfig.json -s ./src -o ./dist",
    "copy:assets": "copyfiles locales/**/* dist/ && copyfiles -f src/public/**/*.svg dist/public/svg && copyfiles -f src/public/**/*.jpg dist/public/images && copyfiles -f src/styles/**/* dist/styles",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --fix",
    "test": "jest",
    "extract:i18n": "tsx ./scripts/i18n-extract.ts",
    "compile:i18n": "formatjs compile-folder \"./locales/extracted\" --format simple \"./locales/compiled\""
  },
  "dependencies": {
    "@formatjs/intl": "^3.1.6",
    "@formatjs/intl-localematcher": "^0.6.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-query": "^5.79.0",
    "@tanstack/react-query-devtools": "^5.79.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "cookies-next": "^6.0.0",
    "lucide-react": "^0.445.0",
    "motion": "^12.23.0",
    "react-color": "^2.19.3",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "next-auth": ">=4.0.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@formatjs/cli": "^6.7.2",
    "@formatjs/cli-lib": "^7.4.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.28",
    "copyfiles": "^2.4.1",
    "eslint": "^9",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-formatter-html": "^2.7.3",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-storybook": "^9.0.16",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jest-fetch-mock": "^3.0.3",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "react": "^19.1.0",
    "react-color": "^2.19.3",
    "react-dom": "^19.1.0",
    "shx": "^0.4.0",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LerianStudio/console-layout.git"
  }
}
